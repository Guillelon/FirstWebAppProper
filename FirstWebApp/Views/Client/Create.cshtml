@model DAL.Moldels.Client



@using (Html.BeginForm("CreatePost", "Client", FormMethod.Post))
{
    @Html.ValidationSummary(true);

    <br />
    <br />

    <br />

    <div class="row">
        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword1">Name</label>
            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Client Name" } })
        </div>


        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword2">Address</label>
            @Html.EditorFor(m => m.Adresss, new { htmlAttributes = new { @class = "form-control", @placeholder = "Client Address" } })
        </div>


    </div>


    <br />
    <br />
    <br />
    <br />
    <br />

    <hr />

    <div style="text-align:center;">
        <button type="submit" value="Submit" class="btn btn-primary">Add</button>
    </div>











}