@model DAL.Moldels.Client



@using (Html.BeginForm("DeletePost", "Client", FormMethod.Post))
{
    @Html.ValidationSummary(true);

    <br />
    <br />
    <br />




    <div class="row">
        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword1">Name</label>
            @Html.HiddenFor(m => m.Id)
            @Html.DisplayFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>


        <div class="form-group, col-lg-4">
            <label for="exampleInputPassword2">Address</label>
            @Html.DisplayFor(m => m.Adresss, new { htmlAttributes = new { @class = "form-control" } })
        </div>


    </div>


    <br />
    <br />
    <br />
    <br />
    <br />

    <hr />

    <div style="text-align:center;">
        <button type="submit" value="Submit" class="btn btn-primary">Delete</button>
    </div>











}
